<h2>新規投稿</h2>
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @list, url:'/lists', method: :post do |f| %>
<h3>タイトル</h3>
<%= f.text_field :title %>
<h3>本文</h3>
<%= f.text_area :body %>
<h3>画像</h3>
<%= f.file_field :image, accept: "image/*" %>
<%= f.submit "投稿" %>
<% end %>